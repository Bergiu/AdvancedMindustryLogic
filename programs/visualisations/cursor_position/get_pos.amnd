function get_mouse_pos(arc, display, *dposx, *dposy, *error) {
    sensor x arc @shootX
    sensor y arc @shootY
    sensor dx display @x
    sensor dy display @y
    posx = x - dx + 2.75
    posy = y - dy + 2.75
    dposx = posx * 32
    dposy = posy * 32
    if dposx < 0 or dposx > 176 or dposy < 0 or dposy > 176 {
        error = true
    } else {
        error = false
    }
}
